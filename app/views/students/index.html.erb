<h1>Listing students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.surname %></td>
        <td><%= student.birthday %></td>
       <td>
          <div class="btn-defaut">
          <button type="button" class="btn btn-warning btn-xs"><%= link_to 'Show', student %></button>
          </div> 
        </td>
        <td>
          <div class="btn-defaut">
          <button type="button" class="btn btn-warning btn-xs"><%= link_to 'Edit', edit_student_path(student) %></button>
          </div>
        </td>
        <td>
          <div class="btn-defaut">
          <button type="button" class="btn btn-warning btn-xs"><%= link_to 'Destroy', student %></button>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="btn-defaut">
          <button type="button" class="btn btn-default btn-sm"><%= link_to 'New student', new_student_path %></button>
          </div>