<h1>Listing cities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lat</th>
      <th>Lon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= city.lat %></td>
        <td><%= city.lon %></td>
        <td>
           <div class="btn-defaut">
          <button type="button" class="btn btn-warning btn-xs"><%= link_to 'Show', city %></button>
          </div> 
        </td>
        <td>
           <div class="btn-defaut">
          <button type="button" class="btn btn-warning btn-xs"><%= link_to 'Edit', edit_city_path(city) %></button>
          </div> 
        </td>
        <td>
          <div class="btn-defaut">
          <button type="button" class="btn btn-warning btn-xs"><%= link_to 'Destroy', city %></button>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<div class="btn-defaut">
          <button type="button" class="btn btn-default btn-sm"><%= link_to 'New city', new_city_path %></button>
          </div>
